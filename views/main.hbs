<style>
    a {
        text-decoration: none;
        color: #fff;
    }

    .btn-wrapper {
        background-color: #fbfbfb;
        width: 100%;
        border-radius: 10px;
        display: flex;
    }

    .btn-wrapper:first-child {
        margin-left: -100px;
        background-color: black;
    }

    .btn-green {
        color: green;
        transition: 0.2s;
    }

    .green {
        background-color: rgb(127, 237, 127);
        transition: 0.2s;
    }
</style>

{{#each notes}}

<div class="card p-4 ms-4 mt-5" style="width: 500px;">
    <div class="card-body" id="card-body">

        <h1 class="card-title fs-2"> {{title}} </h1>
        <p class="card-text"> {{content}} </p>
        <div class="btn-wrapper">
            <a class="btn ms-4" id="btn"> <i class="bi bi-check-circle-fill"></i>
            </a>
            <a class="btn ms-4" href="/update/{{id}}" id="updBtn"> <i class="bi bi-arrow-clockwise"></i> </a>
            <a class="btn ms-4" href="/del/{{id}}"> <i class="bi bi-trash"></i> </a>
        </div>
    </div>
</div>

{{else}}
<h3 class="display-5 mt-5"> У вас нету заметок. </h3>
{{/each}}

<script>
    const btn = document.querySelector('#btn');
    const card = document.querySelector('.card')
    const btns = document.querySelector('.btn-wrapper')

    btn.addEventListener('click', () => {
        btn.classList.toggle('btn-green');
        card.classList.toggle('green');
        btns.classList.toggle('green');
    });
</script>